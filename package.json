{
  "name": "@danyalwe/capacitor-sensors",
  "version": "1.0.1",
  "description": "Get access to every sensor present in the device!",
  "author": "zAlweNy26",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zAlweNy26/capacitor-sensors.git"
  },
  "bugs": {
    "url": "https://github.com/zAlweNy26/capacitor-sensors/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "sensors",
    "web",
    "android",
    "ios",
    "ionic"
  ],
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "unpkg": "dist/plugin.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "SensorsPlugin.podspec",
    "android/build.gradle",
    "android/src/main/",
    "dist/",
    "ios/Plugin/"
  ],
  "scripts": {
    "verify": "pnpm run verify:web && pnpm run verify:android && pnpm run verify:ios",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "pnpm run build",
    "lint": "eslint && pnpm run swiftlint lint",
    "fmt": "eslint --fix && pnpm run swiftlint --fix --format",
    "eslint": "eslint . --ext ts",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api SensorsPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "pnpm run clean && pnpm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "release": "pnpm run build && changeset publish"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.4.3",
    "@changesets/cli": "^2.29.7",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/w3c-generic-sensor": "^1.0.10",
    "changelogen": "^0.6.2",
    "eslint": "^9.35.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.2",
    "swiftlint": "^2.0.0",
    "typescript": "~5.9.2"
  },
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
