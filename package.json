{
  "name": "@danyalwe/capacitor-sensors",
  "version": "0.0.2",
  "description": "Get access to every sensor present in the device!",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "SensorsPlugin.podspec"
  ],
  "author": "zAlweNy26",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zAlweNy26/capacitor-sensors.git"
  },
  "bugs": {
    "url": "https://github.com/zAlweNy26/capacitor-sensors/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "sensors",
    "web",
    "android",
    "ios",
    "ionic"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api SensorsPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && tsc && rollup -c rollup.config.js --bundleConfigAsCjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/docgen": "^0.2.1",
    "@capacitor/ios": "^6.0.0",
    "@changesets/cli": "^2.26.2",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@types/w3c-generic-sensor": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.57.0",
    "prettier": "~3.0.3",
    "prettier-plugin-java": "~2.3.1",
    "prettier-plugin-kotlin": "^2.1.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "swiftlint": "^1.0.2",
    "typescript": "~5.1.6"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
